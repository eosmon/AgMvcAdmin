@using Microsoft.Ajax.Utilities
@model AgMvcAdmin.Models.PageModel


<div class="well-header">
    <div style="display: inline-block; width: calc(100% - 120px) !important">
        <h3 class="header3">Home Page - Scrolling Manufacturers</h3>
    </div>
</div>
<div style="height: 20px"></div>
<div id="divLoading" class="divWait" style="width: 1200px"></div>
<div id="divFeed" class="well-content row" style="margin-left: 0; font-size: 11px !important">
    <form id="mfgFeedEdit" action="" method="post">
        <input type="hidden" id="trc" value="">
        <input type="hidden" id="map" value="0" />
        <input type="hidden" id="mid" value="0" />
        <input type="hidden" id="dfo" value="0" />
        <input type="hidden" id="pmo" value="1" />


        <div class="gun-nav-heading">
            <div class="gunsPerPg">
                <div style="display: inline-block">Scroll Active:</div>
                <div style="display: inline-block; vertical-align: middle; padding-left: 5px">
                    <select id="s1" class="sm-menu" onchange="updateHsStatus(this.value)">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div id="hsStat" class="hs-scroll-disabled">*** Scroll Is Disabled ***</div>
            </div>            
            <div class="gun-count" id="gunCountHeader">Loading Manufacturers...</div>
            <div style="display: table-cell; vertical-align: -webkit-baseline-middle; width: 25%; text-align: right; padding-right: 20px">
                <div style="display: inline-block">
                    <div style="display: table-cell; vertical-align: middle">
                        <input type="checkbox" id="c1" checked="checked" onchange="bindScroll()"/>
                    </div>
                    <div style="display: table-cell; padding-left: 5px; padding-top: 1px; padding-right: 5px">Data Feed Only</div>
                </div>
                <div style="display: inline-block; padding-left: 5px">
                    <div style="display: table-cell; vertical-align: middle">
                        <input type="checkbox" id="c2" onchange="bindScroll()"/>
                    </div>
                    <div style="display: table-cell; padding-left: 5px; padding-top: 1px; padding-right: 5px">Parents Only</div>
                </div>
                <div style="display: inline-block; padding-left: 5px">
                    <div style="display: table-cell; vertical-align: middle">
                        <input type="checkbox" id="c3" onchange="bindScroll()"/>
                    </div>
                    <div style="display: table-cell; padding-left: 5px; padding-top: 1px; padding-right: 5px">Active Only</div>
                </div>
            </div>
        </div>
        <div id="scrollNoData" style="text-align: center; padding-top: 25px; display: none"></div>

        <div id="scrollRowHeader" class="hs-shell">
            <div class="hs-Header">
                <div class="mfg-gridHeader">ID</div>
                <div class="mfg-gridHeader">Manuf Name</div>
                <div class="mfg-gridHeader">Active</div>
                <div class="mfg-gridHeader">Color</div>
                <div class="mfg-gridHeader">Image</div>
                <div class="mfg-gridHeader">Edit</div>
                <div class="mfg-gridHeader">Manuf URL</div>
                <div class="mfg-gridHeader">Update</div>
            </div>
            <div id="scrollRows" style="width: 100%; text-align: left; display: inline-block; height: 600px; overflow-y: scroll"></div>
        </div>

    </form>
</div>

<script type="text/javascript" language="javascript">
    $(window).onload(hsLoadGrid());
</script>
